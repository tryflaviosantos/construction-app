# Vivid-Build Environment Configuration
# Copy this file to .env and update with your values

# ============================================
# DATABASE CONFIGURATION
# ============================================

# PostgreSQL connection string
# Format: postgresql://[user[:password]@][host][:port][/database]
#DATABASE_URL=postgresql://vivid_user:vivid_secure_password_123@localhost:5432/vivid_db

# Alternative connection strings:
# Using default postgres user:
DATABASE_URL=postgresql://root:123456@localhost:5432/construction

# Using localhost without authentication (development only):
# DATABASE_URL=postgresql://localhost/vivid_db

# Using remote database:
# DATABASE_URL=postgresql://user:password@remote-host.com:5432/vivid_db

# ============================================
# APPLICATION SETTINGS
# ============================================

# Node environment
NODE_ENV=development

# Server port
PORT=3000

# Server host
HOST=localhost

# ============================================
# AUTHENTICATION (REPLIT AUTH)
# ============================================

# Replit Auth token (if using Replit)
REPLIT_AUTH_TOKEN=your_replit_token_here

# ============================================
# OPTIONAL: STRIPE CONFIGURATION
# ============================================

# Stripe API keys (for subscription management)
# STRIPE_SECRET_KEY=sk_test_your_key_here
# STRIPE_PUBLISHABLE_KEY=pk_test_your_key_here
# STRIPE_WEBHOOK_SECRET=whsec_your_secret_here

# ============================================
# OPTIONAL: EMAIL CONFIGURATION
# ============================================

# Email service (sendgrid, mailgun, etc.)
# EMAIL_SERVICE=sendgrid
# EMAIL_API_KEY=your_api_key_here
# EMAIL_FROM=noreply@vivid-build.com

# ============================================
# OPTIONAL: AWS S3 CONFIGURATION
# ============================================

# AWS credentials for file storage
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=vivid-build-bucket

# ============================================
# OPTIONAL: LOGGING
# ============================================

# Log level (debug, info, warn, error)
LOG_LEVEL=info

# ============================================
# OPTIONAL: SECURITY
# ============================================

# JWT secret for token signing
# JWT_SECRET=your_super_secret_key_here_min_32_chars

# Session secret
# SESSION_SECRET=your_session_secret_here

# ============================================
# OPTIONAL: FEATURE FLAGS
# ============================================

# Enable/disable features
# FEATURE_SERVICE_ORDERS=true
# FEATURE_SUBSCRIPTIONS=true
# FEATURE_PAYROLL=true
# FEATURE_CHAT=true
# FEATURE_DOCUMENTS=true
# FEATURE_ANALYTICS=true

# ============================================
# OPTIONAL: THIRD-PARTY SERVICES
# ============================================

# Google Maps API (for geolocation)
# GOOGLE_MAPS_API_KEY=your_api_key_here

# Twilio (for SMS notifications)
# TWILIO_ACCOUNT_SID=your_account_sid
# TWILIO_AUTH_TOKEN=your_auth_token
# TWILIO_PHONE_NUMBER=+1234567890

# ============================================
# IMPORTANT NOTES
# ============================================

# 1. NEVER commit this file to version control
# 2. Add .env to .gitignore
# 3. Use strong passwords for production
# 4. Rotate secrets regularly
# 5. Use environment-specific values
# 6. Keep sensitive data secure